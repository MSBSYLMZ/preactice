{
  "compilerOptions": {
    "baseUrl": ".",
    "paths" : {
        "@components/*": ["components/*"],
        "@basicComponents/*" :["components/basics/*"],
        "@styles/*": ["styles/*"],
        "@data/*": ["data/*"],
        "@icons/*" :["public/static/icons/*"],
        "@static/*": ["public/static/*"],
        "@requests/*": ["hooks/requests/*"],
        "@hooks/*": ["hooks/*"],
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "jest.config.ts", "__test__/api/question/question.integation.test.js", "__test__/api/question/question.integation.test.js"],
  "exclude": ["node_modules"]
}
